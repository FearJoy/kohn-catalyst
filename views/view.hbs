<div>
    <table>
        <thead>
        <th colspan="2">{{first_name}} {{last_name}}</th>
        </thead>
        <tbody>
        <tr>
            <td>Name</td>
            <td>{{first_name}} {{last_name}}</td>
        </tr>
        <tr>
            <td>Phone</td>
            <td>{{phone_number}}</td>
        </tr>
        <tr>
            <td>Address</td>
            <td>{{address.number}} {{address.street}}<br>
                {{#if address.unit}}
                    , {{address.unit}}<br>
                {{/if}}
                {{address.city}}, {{address.state}} {{address.zip}}
            </td>
        </tr>
        <tr>
            <td>Date Of Birth</td>
            <td>{{dob}}</td>
        </tr>
        <tr>
            <td>Marital Status</td>
            <td>{{marital_status}}</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>{{email}}</td>
        </tr>
        <tr>
            <td>Driver's License</td>
            <td>{{driver_license}}</td>
        </tr>
        <tr>
            <td>Emergency Contact</td>
            <td>{{emergency_contact.name}}<br>
                {{emergency_contact.phone}}
            </td>
        </tr>
        <tr>
            <td>Language</td>
            <td>{{language}}</td>
        </tr>
        <tr>
            <td>Veteran</td>
            <td>{{veteran}}</td>
        </tr>
        </tbody>
    </table>

    <a href="/view">Back</a>
</div>
