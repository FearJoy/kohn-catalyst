<script>
    $(document).ready(function() {
        //FILLS IN EDITABLE DATA FOR ADDRESS
        $('#address').editable({
            value: {
                number: '{{address.number}}',
                street: '{{address.street}}',
                unit: '{{address.unit}}',
                city: '{{address.city}}',
                state: '{{address.state}}',
                zip: '{{address.zip}}'
            }
        });

        //FILLS IN EDITABLE DATA FOR marital status
        $('#marital_status').editable({
            value: '{{marital_status}}',
            source:
            [
                {value: 'married', text: 'married'},
                {value: 'single', text: 'single'}
            ]
        });

        //FILLS IN EDITABLE DATA FOR veteran status
        $('#veteran').editable({
            value: {{veteran}},
            source:
                    [
                        {value: 1, text: 'true'},
                        {value: 0, text: 'false'}
                    ]
        });
    });
</script>